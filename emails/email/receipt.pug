doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Thank You for Your Purchase
    link(rel="stylesheet", href="style.css")
    style.
      body {
          font-family: Arial, sans-serif;
          margin: 0;
          padding: 0;
          background-color: #f5f5f5;
      }
      .container {
          max-width: 600px;
          margin: 20px auto;
          background-color: #fff;
          border-radius: 10px;
          overflow: hidden;
      }
      header {
          background-color: #7ada7a;
          color: #fff;
          padding: 20px;
          text-align: center;
          position: relative;
      }
      .logo-container {
          display: flex;
          align-items: center;
          justify-content: center;
      }
      .logo {
          width: 80px;
          height: 80px;
          border-radius: 50%;
          overflow: hidden;
          margin-right: 10px;
      }
      .logo img {
          width: 100%;
          height: auto;
          display: block;
      }
      .logo-text {
          font-size: 20px;
      }
      header .date {
          position: absolute;
          top: 20px;
          right: 20px;
          color: black;
      }
      .content {
          padding: 20px;
          background-color: #7ada7a;
          overflow: hidden; /* Ensure content doesn't overflow */
      }
      .content img {
          max-width: 50%; /* Adjust the width as needed */
          height: auto;
          display: block;
          margin: 10px 0; /* Adjust margin */
          float: left; /* Align to the left */
      }
      .receipt {
          background-color: #fff;
          padding: 20px;
      }
      .receipt table {
          width: 100%;
          border-collapse: collapse; 
      }
      .receipt th,
      .receipt td {
          padding: 10px;
          border-bottom: 1px solid #ddd;
      }
      .receipt th {
          text-align: left; /* Align text in th to left */
      }
      .pay {
      background-color: #fff;
      padding-left: 20px;
      }
      .pay table {
      width: 100%;
      border-collapse: collapse; 
      }
      .pay th,
      .pay td {
      padding-left: 10px;
      border-bottom: 1px solid #ddd;
      }
      .pay th {
      padding-top: 2px;
      text-align: left; /* Align text in th to left */
      }
      .total-heading {
          font-size: 24px;
          margin-top: 20px;
          text-align: center;
      }
      .fertilizer-image {
          display: block;
          margin: 20px auto;
          width: 100px;
          border-radius: 5px;
          margin-left: 50px;
          box-shadow:0 10px 35px rgba(0,0,1,0.9);
      }
      .subtotal,
      .delivery-fee,
      .discount {
          text-align: right;
      }
      .subtotal-value,
      .delivery-fee-value,
      .discount-value {
          text-align: right; /* Align values in td to right */
      }
      .total {
          text-align: left; /* Align total to the left */
          margin-top: 20px;
          padding: 10px 20px;
          display: flex; /* Use flexbox */
          align-items: center; /* Vertically center items */
          justify-content: space-between; /* Space between items */
      }
      .total strong {
          font-size: 24px; /* Increase font size */
          font-weight: bold; /* Make it bold */
      }
      .amount-charged{
          padding-left: 10px;
          margin-left: 20px;
      }
      .o_pay {
          text-align: right;
          padding-right: 30px;
          padding-left: 10px;
          padding-bottom: 20px;
      }
      .o_pay-value {
          padding-right: 30px;
          padding-left: 10px;
          padding-bottom: 20px;
          text-align: right; /* Align values in td to right */
      }

  body
    .container
      header
        .logo-container
          .logo
            img(src="https://res.cloudinary.com/pruthvij/image/upload/v1714304883/g1umtv3zlem7mlk1tbvl.webp", alt="Logo")
          .logo-text
            strong Cropify
            br
            br
        //- span.date
        //-   | #{booking.createdAt}
      .content
        p Thanks for ordering, 
          strong #{firstName}
          | !
        p Here's your receipt for 
          strong #{booking.crop.name}
          |  by Cropify:
        img(src=`${booking.crop.image}`, alt="Product Image", class="fertilizer-image")
      .total
        span.total-heading
          strong Total:
        strong ₹ #{booking.price}
      .receipt
        table
          tr
            th #{booking.crop.name}
            td.subtotal ₹ #{booking.price}
      .amount-charged
        strong Amount Charged:
      .pay
        table
          tr
            th Online payment
            td.o_pay ₹ #{booking.price}
      span #{booking.createdAt}
